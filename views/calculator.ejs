        <!-- Add the Google Translate API -->
        <script type="text/javascript"
            src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>

        </div>
    
    <div class="container">
        <h1>Water Footprint Calculators</h1>
        <div class="button-container">
            <button id="domestic-btn" >Domestic Calculator</button>
            <button id="agro-btn" onclick="window.open('/agro', '_blank')">Agriculture Calculator</button>
        </div>

        <div id="domestic-calculator">
            
            <form id="domestic-form">
                <label for="shower">Minutes spent in shower as per person per day:</label>
                <input type="number" id="shower" placeholder="Enter minutes spent in shower" min="0" required>

                <label for="flush">Number of toilet flushes as per person per day:</label>
                <input type="number" id="flush" placeholder="Enter number of toilet flushes" min="0" required>

                <label for="dishes">Number of times dishes are washed as per person per day:</label>
                <input type="number" id="dishes" placeholder="Enter times dishes are washed" min="0" required>

                <label for="clothes">Number of clothes washed as per person per day:</label>
                <input type="number" id="clothes" placeholder="Enter number of clothes washed" min="0" required>

                <label for="people">Number of people:</label>
                <input type="number" id="people" placeholder="Enter number of people" min="1" required>

                <button type="button" id="calculate-domestic">Calculate</button>
            </form>

            <div id="domestic-results" class="results" style="display: none;">
                <h3>Water Usage:</h3>
                <p id="domestic-summary"></p>
                <div class="solutions">
                    <h3>Solutions to Reduce Water Wastage:</h3>
                    <ul>
                        <li>Take shorter showers or use water-saving showerheads.</li>
                        <li>Fix any leaks in faucets or pipes immediately.</li>
                        <li>Use a dual-flush toilet system to reduce water per flush.</li>
                        <li>Run washing machines and dishwashers only with full loads.</li>
                        <li>Adopt water-efficient appliances and fixtures.</li>
                    </ul>
                    <a href="/">Know More</a>
                </div>
            </div>
        </div>
    </div>
    <script src="../js/calculator.js"></script>

</body>
</html>     